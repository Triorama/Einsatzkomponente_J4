<?xml version="1.0" encoding="utf-8" ?>
<form>
  <fields name="filter">
    <field
      name="year"
      type="sql"
      class="inputbox"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_JAHR"
      query="SELECT '' AS id, 'COM_EINSATZKOMPONENTE_JAHR' AS title UNION SELECT Year(alarmierungszeit) as id, Year(alarmierungszeit) as title FROM #__eiko_einsatzberichte WHERE (state='1' OR state = '2') GROUP BY title ORDER BY title DESC"
      key_field="id"
      value_field="title"
    />

    <field
      name="auswahl_orga"
      type="sql"
      class="multipleOrganisations"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_ORGANISATION"
      query="SELECT id, name FROM #__eiko_organisationen  WHERE state='1' order by ordering ASC"
      key_field="id"
      multiple="multiple"
      label="COM_EINSATZKOMPONENTE_ORGANISATION"
      value_field="name"
    />

    <field
      name="einsatzart"
      type="sql"
      class="inputbox"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_EINSATZART"
      header="COM_EINSATZKOMPONENTE_EINSATZART"
      query="SELECT id, title FROM #__eiko_einsatzarten WHERE state='1' order by ordering ASC"
      key_field="id"
      value_field="title"
    />

    <field
      name="einsatzkategorie"
      type="sql"
      class="inputbox"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_KATEGORIE"
      header="COM_EINSATZKOMPONENTE_KATEGORIE"
      query="SELECT id, title FROM #__eiko_einsatzkategorie  WHERE state='1' order by ordering ASC"
      key_field="id"
      value_field="title"
    />

    <field
      name="alarmierungsart"
      type="sql"
      class="inputbox"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_ALARMIERUNGSART"
      header="COM_EINSATZKOMPONENTE_ALARMIERUNGSART"
      query="SELECT id, title FROM #__eiko_alarmierungsarten WHERE state='1' order by ordering ASC"
      key_field="id"
      value_field="title"
    />

    <field
      name="vehicles"
      type="sql"
      class="inputbox"
      onchange="this.form.submit();"
      translate="COM_EINSATZKOMPONENTE_FAHRZEUG"
      header="COM_EINSATZKOMPONENTE_FAHRZEUG"
      query="SELECT id, concat( name, '   (', detail2, ')') AS name FROM #__eiko_fahrzeuge WHERE (state='1' OR state = '2') order by ordering ASC"
      key_field="id"
      value_field="name"
    />

    <field name="search" type="text" hint="COM_EINSATZKOMPONENTE_SUCHEN" label="COM_USERS_FILTER_SEARCH_DESC" class="js-stools-search-string" />

    <!-- Keep "_dateformat" suffix for date validation on form submit -->
    <field name="alarmierungszeit_from_dateformat" type="calendar" class="inputbox" label="COM_EINSATZKOMPONENTE_FORM_LBL_EINSATZBILDERBEARBEITEN_CREATED_BY" description="COM_EINSATZKOMPONENTE_FORM_DESC_EINSATZBILDERBEARBEITEN_CREATED_BY" onchange="this.form.submit();" />

    <!-- Keep "_dateformat" suffix for date validation on form submit -->
    <field name="alarmierungszeit_to_dateformat" type="calendar" class="inputbox" label="COM_EINSATZKOMPONENTE_FORM_LBL_EINSATZBILDERBEARBEITEN_CREATED_BY" description="COM_EINSATZKOMPONENTE_FORM_DESC_EINSATZBILDERBEARBEITEN_CREATED_BY" onchange="this.form.submit();" />

